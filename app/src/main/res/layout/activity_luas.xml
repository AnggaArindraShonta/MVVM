<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.example.mvvm.viewmodel.MainViewModel" />
    </data>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.LuasActivity">

        <EditText
            android:text="@={viewmodel.etAlas}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="alas"/>

        <EditText
            android:text="@={viewmodel.etTinggi}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="tinggi"/>

        <Button
            android:onClick="@{()-> viewmodel.btnLuasSegitiga(context)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil luas segitiga"/>

    </LinearLayout>
</layout>
